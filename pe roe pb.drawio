  <diagram id="O7o4N0iol5nreHchQvjN" name="财报">
    <mxGraphModel grid="1" page="1" gridSize="10" guides="1" tooltips="1" connect="1" arrows="1" fold="1" pageScale="1" pageWidth="10" pageHeight="10" math="1" shadow="0">
      <root>
        <mxCell id="0" />
